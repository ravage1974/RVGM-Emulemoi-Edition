<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		<!-- HIDDE ELEMENTS -->
		<text name="sys_label, sys_info" extra="static">
			<visible>false</visible>
		</text>
		<image name="info-bg" extra="static">
			<visible>false</visible>
		</image>	
		<video name="videoPreview" extra="static">
			<visible>false</visible>
		</video>

		<!-- Sytem AVATAR sprite -->
		<image name="avatar" extra="static">
			<pos>0.385 0.047</pos>
		</image>
		
		<!-- AVATAR 2 : Info, Purple Ghost with counter Sprite -->
		<image name="avatar2" extra="static">
			<origin>0 0</origin>
			<pos>0.03 0.117</pos>
			<maxSize>0.236 0.633</maxSize>
			<path>./avatar2.png</path>
			<path>./avatar2-${activeView}.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<!-- AVATAR 3 : Console, Pink Ghost -->
		<image name="avatar3" extra="static">
			<origin>0 0</origin>
			<pos>0.667 0.057</pos>
			<maxSize>0.222 0.2591</maxSize>
			<path>./avatar3.png</path>
			<zIndex>18</zIndex>
		</image>
		
	</view>
</theme>
